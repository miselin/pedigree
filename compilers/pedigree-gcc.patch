index 24d13f34409..c35bfa03ceb 100644
--- a/libtool.m4
+++ b/libtool.m4
@@ -5377,7 +5377,9 @@ if test -n "$compiler"; then
   _LT_LINKER_SHLIBS($1)
   _LT_SYS_DYNAMIC_LINKER($1)
